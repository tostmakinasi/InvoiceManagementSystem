

@{
    ViewData["Title"] = "ApartmentList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<ApartmentListViewModel>

<div class="row">
    <div>

    </div>
    <div class="text-center ">
        <h1 class="fw-bold text">Daire Listesi </h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Apartman Adı</th>
                    <th>Daire Katı</th>
                    <th>Kapı Numarası</th>
                    <th>Ev Tipi</th>
                    <th>Durumu</th>
                    <th>Kullanıcı</th>
                    <th>Fatura Sayısı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.Block</td>
                        <td>@item.FloorNumber</td>
                        <td>@item.ApartmentNumber</td>
                        <td>@item.HouseType</td>
                        <td>@item.IsAvailable</td>
                        <td>@item.UserFullName</td>
                        <td>@item.InvoicesCount</td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Apartment" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>