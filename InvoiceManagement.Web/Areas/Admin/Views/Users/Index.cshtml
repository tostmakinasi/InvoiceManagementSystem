
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@model List<UserViewModel>

<div class="row">
    <div>
    </div>
    <div class="text-center ">
        <h1 class="fw-bold text">Kullanıcı Listesi </h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <table class="table table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>TC Kimlik No</th>
                    <th>Kullanıcı Adı</th>
                    <th>Mail</th>
                    <th>Telefon Numarası</th>
                    <th>Araç Plakası</th>
                    <th>Adres</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><user-picture-thumbnail class="rounded rounded-circle mb-3" style="height:30px" user-picture-thumbnail-url="@item.Picture"></user-picture-thumbnail></td>
                        <td>@item.IdentificationNumber</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.CarLicensePlate</td>
                        <td>@item.Address</td>
                        <td><a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>